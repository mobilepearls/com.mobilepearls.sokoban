<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_vertical">

	<TextView
		android:id="@+id/about_text"
		android:autoLink="web"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:textSize="18dip"
		android:singleLine="false"
		android:scrollbars="vertical"
		android:layout_above="@+id/closeButton"
		android:text="Sokoban $VERSION$\n\nby Mobile Pearls\nhttp://mobilepearls.com\n\nGraphics and level data from the game KSokoban by Anders Widell\n\nThis program is free software; you can redistribute it and/or modify it under the terms of the GNU General Public License."
		android:textColor="#FFFFFF"
	/>

	<Button
		android:id="@+id/closeButton"
		android:text="@string/back_button"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
	/>

</RelativeLayout>
